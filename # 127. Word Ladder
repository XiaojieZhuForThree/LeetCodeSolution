class Solution {
    public int ladderLength(String beginWord, String endWord, List<String> wordList) {
        Set<String> start = new HashSet<>();
        Set<String> end = new HashSet<>();
        start.add(beginWord);
        end.add(endWord);
        Set<String> dict = new HashSet<>(wordList);
        if (!dict.contains(endWord)) {
            return 0;
        }
        return helper(start, end, dict, 1);
    }
    public int helper(Set<String> start, Set<String> end, Set<String> dict, int depth) {
        if (start.size() == 0 || end.size() == 0) {
            return 0;
        }
        dict.removeAll(start);
        Set<String> newSet = new HashSet<>();
        for (String word : start) {
            char[] chars = word.toCharArray();
            for (int i = 0; i < chars.length; i++) {
                char replace = chars[i];
                for (char c = 'a'; c <= 'z'; c++) {
                    chars[i] = c;
                    String newWord = new String(chars);
                    if (end.contains(newWord)) {
                        return depth + 1;
                    } else if (dict.contains(newWord)){
                        newSet.add(newWord);
                    }
                }
                chars[i] = replace;
            }
        }
        if (newSet.size() > end.size()) {
            return helper(end, newSet, dict, depth + 1);
        } else {
            return helper(newSet, end, dict, depth + 1);
        }
    }
}


class Solution {
    public int ladderLength(String beginWord, String endWord, List<String> wordList) {
        Queue<String> start = new LinkedList<>();
        //Set<String> end = new HashSet<>();
        start.add(beginWord);
        //end.append(endWord);
        Set<String> dict = new HashSet<>(wordList);
        if (!dict.contains(endWord)) {
            return 0;
        }
        int ans = 0;
        while (dict.size() != 0 && start.size() != 0){
            ans++;
            dict.removeAll(start);
            int i = start.size()-1;
            for (; i >= 0; i--) {
                String word = start.poll();
                char[] chars = word.toCharArray();
                for (int j = 0; j < chars.length; j++){
                    char change = chars[j];
                    for (char c = 'a'; c <= 'z'; c++) {
                        chars[j] = c;
                        String form = new String(chars);
                        if (form.equals(endWord)){
                            return ans+1;
                        } else if (dict.contains(form)){
                            start.add(form);
                        }
                    }
                    chars[j] = change;
                }
            }
        }
        return 0;
    }
}



class Solution {
    public int ladderLength(String beginWord, String endWord, List<String> wordList) {
        Set<String> set = new HashSet<>();
        Set<String> wordSet = new HashSet<>(wordList);
        set.add(beginWord);
        int res = 1;
        while (!set.isEmpty()) {
            if (set.contains(endWord)) {
                return res;
            }
            res++;
            Set<String> nextSet = new HashSet<>();
            for (String imd : set) {
                StringBuilder sb = new StringBuilder(imd);
                for (int i = 0; i < sb.length(); i++) {
                    char init = sb.charAt(i);
                    for (char c = 'a'; c <= 'z'; c++) {
                        sb.setCharAt(i, c);
                        String test = sb.toString();
                        if (wordSet.contains(test) && !set.contains(test)) {
                            nextSet.add(test);
                            wordSet.remove(test);
                        }
                    }
                    sb.setCharAt(i, init);
                }
            }
            set = nextSet;
        }
        return 0;
    }
}
class Solution {
    public int ladderLength(String beginWord, String endWord, List<String> wordList) {
        Set<String> set = new HashSet<>();
        set.addAll(wordList);
        return bfs(beginWord, endWord, set);
    }
    private int bfs(String beginWord, String endWord, Set<String> wordList) {
        int ans = 0;
        Set<String> cur = new HashSet<>();
        Set<String> prev = new HashSet<>();
        cur.add(beginWord);
        while(!cur.isEmpty() && !cur.contains(endWord)) {
            ans++;
            Set<String> next = new HashSet<>();
            for (String s : cur) {
                StringBuilder sb = new StringBuilder(s);
                for (int i = 0; i < sb.length(); i++) {
                    char init = sb.charAt(i);
                    for (char c = 'a'; c <= 'z'; c++) {
                        if (c != sb.charAt(i)) {
                            sb.setCharAt(i, c);  
                            String ns = sb.toString();
                            if (wordList.contains(ns) && !prev.contains(ns)) {
                                //wordList.remove(ns);
                                next.add(ns);
                            }
                        }
                    }
                    sb.setCharAt(i, init); 
                }
                prev.add(s);
            }
            cur = next;
        }
        return cur.isEmpty() ? 0 : ans + 1;
    }
}
