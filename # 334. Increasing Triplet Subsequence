class Solution {
    public boolean increasingTriplet(int[] nums) {
        if (nums == null || nums.length < 3) {
            return false;
        }
        int p1 = 0, p2 = 1, p3 = 2;
        while (p1 < nums.length - 2 && p2 < nums.length - 1 && p3 < nums.length) {
            if (nums[p1] < nums[p2] && nums[p2] < nums[p3]) {
                return true;
            } else if (nums[p1] >= nums[p2]) {
                p1 = p2;
                p2 ++;
                p3 = p2 + 1;
            } else if (nums[p2] >= nums[p3]) {
                if (nums[p3] > nums[p1]) {
                    p2 = p3;
                    p3++;
                } else if (p3 < nums.length-1 && nums[p3 + 1] > nums[p2]){
                    return true;
                } else if (p3 < nums.length - 2 && nums[p3 + 1] > nums[p3]){
                    p1 = p3;
                    p2 = p3 + 1;
                    p3 = p3 + 2;                    
                } else {
                    p3 ++;
                }
            }
        }
        return false;
    }
}
