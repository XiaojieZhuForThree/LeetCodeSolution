package problems;

public class Question1013 {
	class Solution {
		public boolean canThreePartsEqualSum(int[] A) {
			int sum = 0;
			for (int i : A) {
				sum += i;
			}
			if (sum % 3 != 0) {
				return false;
			}
			int part = sum / 3, cur = 0, t = 0;
			for (int i : A) {
				cur += i;
				if (cur == part) {
					cur = 0;
					t++;
				}
			}
			return t >= 3;
		}
	}
}
