package problems;

public class Question1103 {
	class Solution {
		public int[] distributeCandies(int candies, int num_people) {
			int[] ans = new int[num_people];
			int i = 0, n = num_people, quotion = 0;
			while (candies > 0) {
				ans[i++ % n] += Math.min(candies, ++quotion);
				candies -= quotion;
			}
			return ans;
		}
	}
}
