class Solution {
    public int minFlipsMonoIncr(String S) {
         int r0 = 0, l1 = 0;        
        for (int i = 0; i < S.length(); i++) {
            if (S.charAt(i) == '0') {
                r0++;
            } 
        }        
        int res = r0;        
        for (int j = 0; j < S.length(); j++) {
            if (S.charAt(j) == '0') {
                r0--;
            } else {
                l1++;
            }
            res = Math.min(l1 + r0, res);
        }
        return res;          
    }
}

class Solution {
    public int minFlipsMonoIncr(String S) {
        int flip = 0, ones = 0;
        for (char i : S.toCharArray()) {
            if (i == '0') {
                if (ones == 0) {
                    continue;
                } else {
                    flip ++;
                }
            } else {
                ones++;
            }
            flip = Math.min(flip, ones);
        }
        return flip;
    }
}
