package com.leetcode.problems;

public class Question926 {
	class Solution {
		public int minFlipsMonoIncr(String s) {
			if (s == null || s.length() == 0)
				return 0;
			int n = s.length();
			int ones = s.charAt(0) - '0';
			int[] ans = new int[n];
			for (int i = 1; i < n; i++) {
				if (s.charAt(i) == '1') {
					ans[i] = ans[i - 1];
					ones++;
				} else {
					int val1 = ones;
					int val2 = ans[i - 1] + 1;
					ans[i] = Math.min(val1, val2);
				}
			}
			return ans[n - 1];
		}
	}
}
