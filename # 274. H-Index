package com.leetcode.problems;

public class Question274 {
	class Solution {
		public int hIndex(int[] citations) {
			int n = citations.length;
			int[] bucket = new int[n + 1];
			for (int i : citations) {
				if (i > n) {
					bucket[n]++;
				} else {
					bucket[i]++;
				}
			}
			int cnt = 0;
			for (int i = n; i > 0; i--) {
				cnt += bucket[i];
				if (cnt >= i) {
					return i;
				}
			}
			return 0;
		}
	}
}
