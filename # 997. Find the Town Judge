package problems;

public class Question997 {
	class Solution {
		public int findJudge(int N, int[][] trust) {
			int[] checked = new int[N + 1], trusted = new int[N + 1];
			for (int[] t : trust) {
				trusted[t[1]]++;
				checked[t[0]] = 1;
			}
			for (int i = 1; i <= N; i++) {
				if (trusted[i] == N - 1 && checked[i] == 0) {
					return i;
				}
			}
			return -1;
		}
	}
}
