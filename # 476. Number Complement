package com.leetcode.problems;

public class Question476 {
	class Solution1 {
	    public int findComplement(int num) {
	        int ref = Integer.highestOneBit(num<<1) - 1;
	        return ref ^ num;
	    }
	}
	class Solution2 {
	    public int findComplement(int num) {
	        int N = num, ref = 1;
	        while (N > 0) {
	            N >>= 1;
	            ref <<= 1;
	        }
	        return (ref - 1) ^ num;
	    }
	}
}


class Solution {
public:
    int findComplement(int num) {
        long base = 1;
        while (base <= num) base <<= 1;
        return base - 1 - num;
    }
};
