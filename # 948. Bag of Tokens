package problems;

import java.util.Arrays;

public class Question948 {
	class Solution {
		public int bagOfTokensScore(int[] tokens, int P) {
			Arrays.sort(tokens);
			int ans = 0, pts = 0, i = 0, j = tokens.length - 1;
			while (i <= j) {
				if (P >= tokens[i]) {
					P -= tokens[i++];
					ans = Math.max(ans, ++pts);
				} else if (pts > 0) {
					pts--;
					P += tokens[j--];
				} else {
					break;
				}
			}
			return ans;
		}
	}
}
