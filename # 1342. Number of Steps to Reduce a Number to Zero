package com.leetcode.problems;

public class Question1342 {
	class Solution1 {
		public int numberOfSteps(int num) {
			int step = 0;
			while (num > 0) {
				if (num % 2 == 0) {
					num /= 2;
				} else {
					num--;
				}
				step++;
			}
			return step;
		}
	}

	class Solution2 {
		public int numberOfSteps(int num) {
			int steps = 0;
			while (num != 0) {
				steps += num % 2 == 0 || num == 1 ? 1 : 2;
				num >>= 1;
			}
			return steps;
		}
	}
}
