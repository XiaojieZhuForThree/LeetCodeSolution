class Solution {
    public int canCompleteCircuit(int[] gas, int[] cost) {
        int left = 0, index = -1, max = 0;
        for (int i = gas.length-1; i >= 0; i--) {
            left += gas[i] - cost[i];     
            if (left >= max) {
                index = i;
                max = left;
            }
        }
        return left >= 0 ? index : -1;
    }
}
