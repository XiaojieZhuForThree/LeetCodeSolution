package problems;

public class Question1219 {
	class Solution {

		public int getMaximumGold(int[][] grid) {
			int[][] dirs = new int[][] { { 1, 0 }, { -1, 0 }, { 0, 1 }, { 0, -1 } };
			int ans = 0;
			for (int i = 0; i < grid.length; i++) {
				for (int j = 0; j < grid[0].length; j++) {
					if (grid[i][j] != 0) {
						ans = Math.max(ans, dfs(grid, i, j, dirs, 0));
					}
				}
			}
			return ans;
		}

		private int dfs(int[][] grid, int i, int j, int[][] dirs, int curVal) {
			if (i < 0 || i >= grid.length || j < 0 || j >= grid[0].length || grid[i][j] == 0) {
				return curVal;
			}
			curVal += grid[i][j];
			int temp = grid[i][j];
			grid[i][j] = 0;
			int ans = 0;
			for (int[] dir : dirs) {
				ans = Math.max(ans, dfs(grid, i + dir[0], j + dir[1], dirs, curVal));
			}
			grid[i][j] = temp;
			return ans;
		}
	}
}
