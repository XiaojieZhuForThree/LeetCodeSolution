class Solution {
    public void setZeroes(int[][] matrix) {
        Set<Integer> delRow = new HashSet<>();
        Set<Integer> delCol = new HashSet<>();
        for (int i = 0; i < matrix.length; i++) {
        	for (int j = 0; j < matrix[0].length; j++) {
        		if (matrix[i][j] == 0) {
        			delRow.add(i);
        			delCol.add(j);
        		}
        	}
        }
        for (int i : delRow) {
        	for (int j = 0; j < matrix[0].length; j++) {
        		matrix[i][j] = 0;
        	}
        }
        for (int j : delCol) {
        	for (int i = 0; i < matrix.length; i++) {
        		matrix[i][j] = 0;
        	}
        }
    }
}
