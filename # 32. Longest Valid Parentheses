class Solution {
    public int longestValidParentheses(String s) {
        if (s == null || s.length() < 2){
            return 0;
        }
        int left = 0, ans = 0, record = 0;
        boolean invalid = false;
        for (int i = 0; i < s.length(); i++){
            if (s.charAt(i) == ')') {
                if (left > 0){
                    record += 2;
                    left --;
                }
                else{
                    ans = Math.max(ans, record);
                    record = 0;
                    invalid = true;
                }
            }
            else{
                left += 1;
                invalid = false;
            }
        }
        return Math.max(ans, record-left);
    }
}
