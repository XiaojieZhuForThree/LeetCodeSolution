class Solution {
    public int longestValidParentheses(String s) {
        int leftCount = 0, ans = 0;
        int[] dp = new int[s.length()];
        char[] arr = s.toCharArray();
        for (int i = 0; i < arr.length; i++){
            if (arr[i] == '(') leftCount++;
            else if (leftCount > 0){
                dp[i] = dp[i-1] + 2;
                dp[i] += i - dp[i] >= 0 ? dp[i-dp[i]] : 0;
                ans = Math.max(ans, dp[i]);
                leftCount--;
            }
        }
        return ans;
    }
}
