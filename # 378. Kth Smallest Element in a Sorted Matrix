class Solution {
    public int kthSmallest(int[][] matrix, int k) {
        if (matrix == null || matrix.length == 0 || matrix[0].length == 0) return -1;
        int n = matrix.length;
        if (k == 1) return matrix[0][0];
        if (k == n*n) return matrix[n-1][n-1];
        int[] dumb = new int[n*n];
        int x = 0;
        for (int i = 0; i < n; i++){
            for (int j = 0; j < n; j++){
                dumb[x] = matrix[i][j];
                x++;
            }
        }
        Arrays.sort(dumb);
        return dumb[k-1];
    }
}
