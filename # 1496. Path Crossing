package problems;

import java.util.HashSet;
import java.util.Set;

public class Question1496 {
	class Solution {
		public boolean isPathCrossing(String path) {
			Set<String> visited = new HashSet<>();
			int x = 0, y = 0;
			visited.add("0,0");
			for (char c : path.toCharArray()) {
				switch (c) {
				case 'N':
					y++;
					break;
				case 'S':
					y--;
					break;
				case 'E':
					x++;
					break;
				case 'W':
					x--;
					break;
				}
				String nP = x + "," + y;
				if (!visited.add(nP)) {
					return true;
				}
			}
			return false;
		}
	}
}
