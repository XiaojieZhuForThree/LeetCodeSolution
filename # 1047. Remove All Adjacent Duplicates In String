class Solution {
    public String removeDuplicates(String S) {
        Deque<Character> deque = new ArrayDeque();
        for (char c : S.toCharArray()) {
            char s = deque.isEmpty() ? ' ' : deque.peekLast();
            if (s == c) {
                deque.pollLast();
            } else {
                deque.addLast(c);
            }
        }
        StringBuilder sb = new StringBuilder();
        while (!deque.isEmpty()) {
            sb.append(deque.pollFirst());
        }
        return sb.toString();
    }
}
