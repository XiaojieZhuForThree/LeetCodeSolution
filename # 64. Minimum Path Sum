class Solution {
    public int minPathSum(int[][] grid) {
        int ans = 0;
        for (int i = 0; i < grid.length; i++) {
            for (int j = 0; j < grid[0].length; j++) {
                int add = 0;
                if (i > 0 && j > 0) {
                    add = Math.min(grid[i-1][j], grid[i][j-1]);
                } else if (i > 0) {
                    add = grid[i-1][j];
                } else if (j > 0) {
                    add = grid[i][j-1];
                }
                grid[i][j] += add;
            }
        }
        return grid[grid.length - 1][grid[0].length - 1];
    }
}
