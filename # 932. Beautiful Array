package problems;

public class Question932 {
	class Solution {
		public int[] beautifulArray(int N) {
			int[] ans = new int[N];
			for (int i = 1; i <= N; i++) {
				ans[i - 1] = i;
			}
			return merge(ans);
		}

		private int[] merge(int[] arr) {
			int n = arr.length;
			if (n <= 2) {
				return arr;
			}
			int[] arr1 = new int[n - n / 2], arr2 = new int[n / 2];
			for (int i = 0; i < n; i += 2) {
				arr1[i / 2] = arr[i];
			}
			for (int i = 1; i < n; i += 2) {
				arr2[i / 2] = arr[i];
			}
			int[] ans = new int[n];
			int j = 0;
			int[] sub1 = merge(arr1), sub2 = merge(arr2);
			for (int i = 0; i < sub1.length; i++) {
				ans[j++] = sub1[i];
			}
			for (int i = 0; i < sub2.length; i++) {
				ans[j++] = sub2[i];
			}
			return ans;
		}
	}
}
