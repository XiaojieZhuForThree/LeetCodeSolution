package com.leetcode.problems;

public class Question342 {
	class Solution {
		public boolean isPowerOfFour(int num) {
			for (int i = 0; i < 32; i += 2) {
				if ((1 << i) == num)
					return true;
			}
			return false;
		}
	}
}


import math


class Solution:
    def isPowerOfFour(self, n: int) -> bool:
        if n <= 0:
            return False
        return 4 ** int(math.log(n, 4)) == n
