package problems;

import java.util.ArrayDeque;
import java.util.Deque;

public class Question907 {
	class Solution {
		public int sumSubarrayMins(int[] A) {
			int res = 0, n = A.length, mod = (int) (1e9 + 7);
			Deque<Integer> deque = new ArrayDeque<>();
			int[] left = new int[n], right = new int[n];
			for (int i = 0; i < n; i++) {
				left[i] = i + 1;
				right[i] = n - i;
			}
			for (int i = 0; i < n; i++) {
				while (!deque.isEmpty() && A[deque.peekLast()] > A[i]) {
					deque.pollLast();
				}
				left[i] = deque.isEmpty() ? i + 1 : i - deque.peekLast();
				deque.offer(i);
			}
			deque.clear();
			for (int i = 0; i < n; i++) {
				while (!deque.isEmpty() && A[deque.peekLast()] > A[i]) {
					right[deque.peekLast()] = i - deque.peekLast();
					deque.pollLast();
				}
				deque.offer(i);
			}
			for (int i = 0; i < n; i++) {
				res += (A[i] * left[i] * right[i]) % mod;
				res %= mod;
			}
			return res;
		}
	}
}
