package com.leetcode.problems;

public class Question394 {
	class Solution {
		public String decodeString(String s) {
			StringBuilder sb = new StringBuilder();
			for (int i = 0; i < s.length(); i++) {
				char c = s.charAt(i);
				if (Character.isDigit(c)) {
					int j = i + 1;
					while (j < s.length() && Character.isDigit(s.charAt(j))) {
						j++;
					}
					int rep = Integer.parseInt(s.substring(i, j));
					int m = j + 1;
					int left = 1;
					while (m < s.length() && left != 0) {
						m++;
						if (s.charAt(m) == '[') {
							left++;
						} else if (s.charAt(m) == ']') {
							left--;
						}
					}
					for (int k = 0; k < rep; k++) {
						sb.append(decodeString(s.substring(j + 1, m)));
					}
					i = m;
				} else {
					sb.append(c);
				}
			}
			return sb.toString();
		}
	}
}
