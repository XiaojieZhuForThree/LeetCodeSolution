class Solution:
    def kInversePairs(self, n: int, k: int) -> int:
        dp = [0 for i in range(k + 1)]
        dp[0] = 1
        curMax = 0
        for i in range(1, n + 1):
            curMax += i - 1
            nxt = [0 for i in range(k + 1)]
            nxt[0] = 1
            cur = 1
            for j in range(1, min(k + 1, curMax + 1)):
                cur += dp[j]
                if j - (i - 1) > 0:
                    cur -= dp[j - i]
                cur %= 1_000_000_007
                nxt[j] = cur
            dp = nxt
        return dp[k]
