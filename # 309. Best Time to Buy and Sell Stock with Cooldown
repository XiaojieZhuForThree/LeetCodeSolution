class Solution {
    public int maxProfit(int[] prices) {
        if (prices == null || prices.length <= 1) {
            return 0;
        }
        return helper(prices, 0, 0, false, false);
    }
    private int helper(int[] prices, int index, int profit, boolean bought, boolean cooldown) {
        if (index >= prices.length) {
            return profit;
        }
        else if (cooldown == true) {
            return helper(prices, index + 1, profit, false, false);
        }
        else if (bought == true){
            return Math.max(helper(prices, index+1, profit + prices[index], false, true),
                           helper(prices, index+1, profit, true, false));
        }
        else{
            return Math.max(helper(prices, index+1, profit - prices[index], true, false),
                           helper(prices, index+1, profit, false, false));
        }
    }
}
