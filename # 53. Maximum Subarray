class Solution {
    public int maxSubArray(int[] nums) {
        if (nums == null || nums.length == 0) {
        	return 0;
        }
        int ans = nums[0];
        int maxprev = 0;
        for (int i : nums) {
        	maxprev = Math.max(maxprev + i, i);
        	ans = Math.max(ans, maxprev);
        }
        return ans;
    }
}
