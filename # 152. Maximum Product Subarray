class Solution {
    public int maxProduct(int[] nums) {
        int ans = nums[0];
        for (int i = 1, imax = ans, imin = ans; i < nums.length; i++){
            if (nums[i] < 0){
                int tmp = imax;
                imax = imin;
                imin = tmp;
            }
            imax = Math.max(nums[i], imax * nums[i]);
            imin = Math.min(nums[i], imin * nums[i]);
            ans = Math.max(ans, imax);
        }
        return ans;
    }
}
