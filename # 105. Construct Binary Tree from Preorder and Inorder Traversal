/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode(int x) { val = x; }
 * }
 */
class Solution {
    private int preIndex, inIndex;
    public TreeNode buildTree(int[] preorder, int[] inorder) {
        return reconstruct(preorder, inorder, Integer.MAX_VALUE);
    }
    private TreeNode reconstruct(int[] preorder, int[] inorder, int target){
        if (preIndex >= preorder.length){
            return null;
        }
        if (inorder[inIndex] == target){
            inIndex++;
            return null;
        }
        TreeNode root = new TreeNode(preorder[preIndex++]);
        root.left = reconstruct(preorder, inorder, root.val);
        root.right = reconstruct(preorder, inorder, target);
        return root;
    }
}
