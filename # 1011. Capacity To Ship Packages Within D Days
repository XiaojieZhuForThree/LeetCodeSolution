class Solution {
    public int shipWithinDays(int[] weights, int D) {
        int left = 0, right = 0;
        for (int i : weights) {
            left = Math.max(left, i);
            right += i;
        }
        while (left < right) {
            int mid = (left + right) / 2;
            int cur = 0, times = 1;
            for (int i : weights) {
                if (cur + i > mid) {
                    times++;
                    cur = 0;
                }
                cur += i;
            }
            if (times > D) {
                left = mid + 1;
            } else {
                right = mid;
            }
        }
        return left;
    }
}
