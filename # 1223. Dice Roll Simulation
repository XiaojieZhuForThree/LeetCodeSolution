
public class Question1223 {
	class Solution {
		public int dieSimulator(int n, int[] rollMax) {
			int mod = (int) (1e9 + 7);
			int[][] dp = new int[n + 1][7];
			for (int i = 0; i < 6; i++) {
				dp[1][i] = 1;
			}
			dp[0][6] = 1;
			dp[1][6] = 6;
			int total = 0, totalCurNum = 0;
			for (int i = 2; i <= n; i++) {
				total = 0;
				for (int j = 0; j < 6; j++) {
					totalCurNum = 0;
					for (int k = 1; k <= rollMax[j] && i >= k; k++) {
						totalCurNum += (dp[i - k][6] - dp[i - k][j] + mod) % mod;
						totalCurNum %= mod;
					}
					total += totalCurNum;
					total %= mod;
					dp[i][j] = totalCurNum;
				}
				dp[i][6] = total;
			}
			return dp[n][6];
		}
	}
}
