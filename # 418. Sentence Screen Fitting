package com.leetcode.problems;

public class Question418 {
	class Solution {
		public int wordsTyping(String[] sentence, int rows, int cols) {
			int ans = 0;
			int curRow = 1;
			int ptr = 0;
			int i = 0;
			while (curRow <= rows) {
				ptr += sentence[i].length();
				if (ptr > cols) {
					ptr = 0;
					curRow++;
				} else {
					i++;
					if (i == sentence.length) {
						ans++;
						i = 0;
					}
					if (ptr < cols) {
						ptr++;
					}
				}
			}
			return ans;
		}
	}
}
