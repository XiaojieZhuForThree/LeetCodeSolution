package problems;

public class Question860 {
	class Solution {
		public boolean lemonadeChange(int[] bills) {
			int bill5 = 0, bill10 = 0;
			for (int i : bills) {
				if (i == 5) {
					bill5++;
				} else if (i == 10) {
					if (bill5 == 0) {
						return false;
					}
					bill5--;
					bill10++;
				} else if (i == 20) {
					if (bill10 == 0) {
						if (bill5 < 3) {
							return false;
						}
						bill5 -= 3;
					} else {
						if (bill5 < 1) {
							return false;
						}
						bill10--;
						bill5--;
					}
				}
			}
			return true;
		}
	}
}
