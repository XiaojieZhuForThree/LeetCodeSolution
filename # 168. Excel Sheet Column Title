class Solution {
    public String convertToTitle(int n) {
        StringBuilder ans = new StringBuilder();
        while (n > 0){
            if (n % 26 == 0){
                ans.append('Z');
                n = (n-1) / 26;
            }
            else {
                ans.append((char)('A' + n % 26 - 1));
                n /= 26;
            }
        }
        return ans.reverse().toString();
    }
}
