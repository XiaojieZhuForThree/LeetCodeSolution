class Solution {
    public int lastStoneWeightII(int[] stones) {
        return helper(stones, 0);
    }
    public int helper(int[] stones, int zeroCount) {
        Arrays.sort(stones);
        if (zeroCount == stones.length) {
            return 0;
        }
        if (zeroCount == stones.length-1) {
            return stones[stones.length-1];
        }
        int min = Integer.MAX_VALUE;
        for (int i = zeroCount; i < stones.length-1; i++) {
            for (int j = i+1; j < stones.length; j++) {
                int mediate = stones[i];
                stones[j] -= stones[i];
                stones[i] = 0;
                if (stones[i] == 0) {
                    min = Math.min(min, helper(stones, zeroCount+1));
                }
                else {
                    min = Math.min(min, helper(stones, zeroCount));
                }
                stones[j] += mediate;
                stones[i] = mediate;
            }
        }
        return min;
    }
}
