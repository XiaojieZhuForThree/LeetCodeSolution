/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode(int x) { val = x; }
 * }
 */
class Solution {
    public TreeNode invertTree(TreeNode root) {
        if (root == null) {
        	return null;
        }
        if (root.left == null && root.right == null) {
        	return root;
        }
        TreeNode child1 = invertTree(root.left);
        TreeNode child2 = invertTree(root.right);
        root.left = child2;
        root.right = child1;
        return root;
    }
}
