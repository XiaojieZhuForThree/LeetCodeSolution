package com.leetcode.problems;

public class Question605 {
	class Solution {
		public boolean canPlaceFlowers(int[] flowerbed, int n) {
			return getMaxNewFlowers(flowerbed) >= n;
		}

		private int getMaxNewFlowers(int[] flowerbed) {
			int ans = 0;
			for (int i = 0; i < flowerbed.length; i++) {
				if (flowerbed[i] == 1) {
					continue;
				}
				if ((i - 1 >= 0 && flowerbed[i - 1] == 1) || (i + 1 < flowerbed.length && flowerbed[i + 1] == 1)) {
					continue;
				}
				flowerbed[i] = 1;
				ans++;
			}
			return ans;
		}
	}
}
