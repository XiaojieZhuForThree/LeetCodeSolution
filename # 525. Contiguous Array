class Solution:
    def findMaxLength(self, nums: List[int]) -> int:
        ref = {}
        ref[0] = 0
        diff = 0
        ans = 0
        for i in range(len(nums)):
            val = nums[i]
            if val == 0:
                diff -= 1
            else:
                diff += 1
            if diff in ref:
                ans = max(ans, i + 1 - ref[diff])
            else:
                ref[diff] = i + 1
        return ans
                
